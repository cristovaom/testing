generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Corrida {
  id             String   @id @default(uuid())
  isActive       Boolean  @default(true)
  cpfMotorista   String
  PlacaVeiculo   String
  destino        String
  horarioSaida   DateTime
  horarioChegada DateTime

  Multa Multa?
}

model Multa {
  id            String   @id @default(uuid())
  isActive      Boolean  @default(true)
  idCorrida     String   @unique
  tipoMulta     String
  valorMulta    Float
  dataPagamento DateTime

  Corrida Corrida @relation(fields: [idCorrida], references: [id])
}
